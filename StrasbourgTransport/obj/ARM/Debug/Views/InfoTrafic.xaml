<Page x:ConnectionId='1'
    x:Class="StrasbourgTransport.Views.InfoTrafic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrasbourgTransport.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:model="using:StrasbourgTransport.Models"
    xmlns:ctrl="using:StrasbourgTransport.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ctrl:TitleControl Title="INFO TRAFIC" />

        <Grid Background="#CCFFFFFF" Grid.Row="1"/>

        <ProgressRing x:ConnectionId='2' Grid.Row="1"                                                   Height="30" Width="30" />

        <ListView x:ConnectionId='3' Grid.Row="1"                                                                                                                                                              >
            <ListView.ItemTemplate>
                <DataTemplate                                     >
                    <StackPanel x:ConnectionId='4'>
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock x:ConnectionId='5'                       />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>

